<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>



  <!-- Start of Shoplift scripts -->
  {% render 'shoplift' %}
  <!-- End of Shoplift scripts -->

    {% render 'meta' %}
    {% render 'vwo' %}
    {% render 'seo' %}
    {% render 'theme-head-scripts' %}
    {%- render 'header-scripts.zipifypages', renderctx: 'thm' -%}{{ content_for_header }}

    {%- liquid
      assign body_font_bold = settings.type_body_font | font_modify: 'weight', 'bold'
      assign body_font_italic = settings.type_body_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}
    {% render 'head-stylesheets' %}

    {{ 'base.css' | asset_url | stylesheet_tag }}


    {%- if localization.available_countries.size > 1 or localization.available_languages.size > 1 -%}
      {{ 'component-localization-form.css' | asset_url | stylesheet_tag: preload: true }}
      <script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if settings.predictive_search_enabled -%}
      <link
        rel="stylesheet"
        href="{{ 'component-predictive-search.css' | asset_url }}"
        media="print"
        onload="this.media='all'"
      >
    {%- endif -%}

    {% render 'head-scripts' %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>

    <style>  body.no-scroll {  overflow: hidden;  }  </style>

    {{ 'main.css' | asset_url | stylesheet_tag }}
    {{ 'main.js' | asset_url | script_tag }}
    {{ 'section-product-template.css' | asset_url | stylesheet_tag }}
    {{ 'section-product-template.js' | asset_url | script_tag }}
    {{ 'override.css' | asset_url | stylesheet_tag }}

    {% render 'additional-third-party-scripts' %}


</head>

  <body class="aha--{{ template.suffix }} gradient{% if settings.animations_hover_elements != 'none' %} animate--hover-{{ settings.animations_hover_elements }}{% endif %}">
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>

    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
      {% section 'footer' %}
    </main>
    {{ 'globallight.css' | asset_url | stylesheet_tag }}
    {% if template.suffix == 'mega-bundle' %}
      {{ 'bundleoverrides.css' | asset_url | stylesheet_tag }}
    {% endif %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>

    {% comment %} Do not delete below snippet file {% endcomment %}
    {% render 'theme-head-script' %}


    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- render 'page-footer.zipifypages', renderctx: 'thm', ocuapp: oneclickupsellapp -%}
    <script async src="https://cdn.rebuyengine.com/onsite/js/rebuy.js?shop={{ shop.permanent_domain }}"></script>
    {% render 'rebuy-smartcart-extensions' %}
    <script async data-src="https://static.klaviyo.com/onsite/js/klaviyo.js?company_id=HXhrVm"></script>
    {% render 'footer-scripts' %}
    </body>
</html>
