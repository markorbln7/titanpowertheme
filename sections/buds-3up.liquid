{% schema %}
{
  "name": "3 Up Buds Section",
  "settings": [],
  "blocks": [
    {
      "type": "bud_item",
      "name": "Buds Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Noise Noise control"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "With Titan Smart Buds' open-ear design, ambient sounds flow naturally, allowing you to stay aware of your surroundings. Whether it's traffic or footsteps nearby, our earbuds ensure that you're never completely isolated, making them perfect for city commutes and outdoor activities."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "3 Up Buds Section"
    }
  ]
}
{% endschema %}

<section class="bg-white py-[40px]">
  <div class="max-w-[1120px] mx-auto grid gap-[16px] grid-cols-1 md:grid-cols-3">
    {% for block in section.blocks %}
      <div class="flex flex-col items-center text-center">
        {% if block.settings.image != blank %}
          <img class="mb-[16px] w-full" src="{{ block.settings.image | img_url: '400x400' }}" alt="{{ block.settings.title }}">
        {% endif %}
        {% if block.settings.icon != blank %}
          <img class="w-[32px] h-[32px] mb-[8px]" src="{{ block.settings.icon | img_url: '32x32' }}" alt="{{ block.settings.title }}">
        {% endif %}
        <h3 class="text-[18px] font-bold mb-[8px]">{{ block.settings.title }}</h3>
        <p class="text-[14px]">{{ block.settings.description }}</p>
      </div>
    {% endfor %}
  </div>
</section>
