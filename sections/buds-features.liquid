{% schema %}
{
  "name": "Buds Features Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Perfect control at your fingertips"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Leave your phone in your pocket and conveniently control your ear buds with simple gestures"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title"
        },
        {
          "type": "textarea",
          "id": "feature_description",
          "label": "Feature Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Buds Features Section"
    }
  ]
}
{% endschema %}

<section class="relative bg-black text-white py-[40px] min-h-[60vh] px-[10px]">
  {% if section.settings.image != blank %}
    <div class="absolute inset-0">
      <img class="w-full h-full object-cover" src="{{ section.settings.image | img_url: 'master' }}" alt="Main Image">
    </div>
  {% endif %}
  <div class="max-w-[1240px] mx-auto relative z-10">
    <h2 class="text-[24px] font-bold text-left mb-[8px] text-white">{{ section.settings.title }}</h2>
    <p class="text-[16px] text-left mb-[24px]">{{ section.settings.subtitle }}</p>
    <div class="grid gap-[16px] md:grid-cols-2 max-w-[100%] md:max-w-[50%] mt-[40px]">
      {% for block in section.blocks %}
        <div class="flex flex-col items-left gap-[16px]">
          {% if block.settings.icon != blank %}
            <img class="w-[32px] h-[32px]" src="{{ block.settings.icon | img_url: '32x32' }}" alt="{{ block.settings.feature_title }}">
          {% endif %}
          <div>
            <h3 class="font-bold text-[18px] text-white">{{ block.settings.feature_title }}</h3>
            <p class="text-[14px]">{{ block.settings.feature_description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
