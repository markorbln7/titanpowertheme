          </div>
          <div class="item-content py-[20px] md:px-[20px] px-[10px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[16px] md:text-[18px]  color-white">{{ section.settings.title6 | default: 'Immersive sound' }}</h3>
            <div class="text-[14px] md:text-[16px] leading-[1.2] color-white">{{ section.settings.subtitle6 | default: 'With auto Bass Enhance and our Advanced EQ' }}</div>
          </div>
        </div>

        <!-- Block 7 -->
        <div class="grid-item order-mob-3 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-5 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image7 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] md:px-[20px] px-[10px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[16px] md:text-[18px]  color-white">{{ section.settings.title7 | default: 'Custom diaphragm' }}</h3>
            <div class="text-[14px] md:text-[16px] leading-[1.2] color-white">{{ section.settings.subtitle7 | default: 'Less distortion, deeper lows' }}</div>
          </div>
        </div>

        <!-- Block 8 -->
        <div class="grid-item order-mob-4 overflow-hidden position-relative grid-columns-2 grid-rows-1 grid-columns-lg-4 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image8 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] md:px-[20px] px-[10px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-dark">
            <h3 class="text-[16px] md:text-[18px]  text-[#2f4534]">{{ section.settings.title8 | default: 'Ultra compact' }}</h3>
            <div class="text-[14px] md:text-[16px] leading-[1.2] text-[#2f4534]">{{ section.settings.subtitle8 | default: 'Just 19 mm thin' }}</div>
          </div>
        </div>

        <!-- Block 9 -->
        <div class="grid-item order-mob-9 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image9 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] md:px-[20px] px-[10px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[16px] md:text-[18px]  text-white">{{ section.settings.title9 | default: 'IP54' }}</h3>
            <div class="text-[14px] md:text-[16px] leading-[1.2] text-white">{{ section.settings.subtitle9 | default: 'Dust & water resistance rated' }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

