            <h3 class="text-[16px] md:text-[18px]  text-[#2f4534]">{{ section.settings.title4 | default: 'Clear Voice Technology' }}</h3>
            <div class="text-[14px] md:text-[16px] leading-[1.2] text-[#2f4534]">{{ section.settings.subtitle4 | default: 'AI-enhanced for the clearest calls' }}</div>
          </div>
        </div>

        <!-- Block 5 -->
