<div class="shopify-section media-grid-wrapper as-media-grid mt-[20px]">
  <div>
    <div class="max-w-[1440px] px-[20px] py-[30px] bg-white rounded-[8px] mx-auto">
      <div class="flex items-center justify-center mb-[20px]">
        <span class="bg-[#4F805D] text-white text-[24px] font-bold px-[12px] py-[4px] rounded-full w-[40px] h-[40px] flex items-center justify-center">{{ section.settings.number | default: '1' }}</span>
        <h2 class="text-[#4F805D] text-[24px] font-bold ml-[10px]">{{ section.settings.title | default: 'Packed With Epic Features' }}</h2>
      </div>
      <div class="grid-parent">
        <!-- Block 1 -->
        <div class="grid-item order-mob-1 overflow-hidden position-relative grid-columns-1 grid-rows-2 grid-columns-lg-3 grid-rows-lg-2">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:160.3896103896104%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image1 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end justify-content-lg-end text-dark color-white">
            <h3 class="text-[24px] color-white">{{ section.settings.title1 | default: 'Open Sound Technology' }}</h3>
            <div class="text-[16px] color-white">{{ section.settings.subtitle1 | default: 'Hear it all' }}</div>
          </div>
        </div>

        <!-- Block 2 -->
        <div class="grid-item order-mob-1 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:77.17041800643086%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image2 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end justify-content-lg-end text-white">
            <h3 class="text-[24px] color-white">{{ section.settings.title2 | default: 'New level of comfort' }}</h3>
          </div>
        </div>

        <!-- Block 3 -->
        <div class="grid-item order-mob-7 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:78.94736842105263%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image3 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end justify-content-lg-end text-dark">
            <h3 class="text-[24px] text-[#4F805D]">{{ section.settings.title3 | default: 'Sound Seal System' }}</h3>
            <div class="text-[16px] text-[#4F805D]">{{ section.settings.subtitle3 | default: 'Keeps your audio yours' }}</div>
          </div>
        </div>

        <!-- Block 4 -->
        <div class="grid-item order-mob-6 overflow-hidden position-relative grid-columns-1 grid-rows-2 grid-columns-lg-3 grid-rows-lg-2">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:160.3896103896104%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image4 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-start justify-content-lg-start text-dark">
            <h3 class="text-[24px] text-[#4F805D]">{{ section.settings.title4 | default: 'Clear Voice Technology' }}</h3>
            <div class="text-[16px] text-[#4F805D]">{{ section.settings.subtitle4 | default: 'AI-enhanced for the clearest calls' }}</div>
          </div>
        </div>

        <!-- Block 5 -->
        <div class="grid-item order-mob-8 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:77.9220779220779%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image5 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end justify-content-lg-end text-white">
            <h3 class="text-[24px] color-white">{{ section.settings.title5 | default: '30 hours' }}</h3>
            <div class="text-[16px] color-white">{{ section.settings.subtitle5 | default: 'of playback' }}</div>
          </div>
        </div>

        <!-- Block 6 -->
        <div class="grid-item order-mob-5 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100" style="--bs-aspect-ratio:77.9220779220779%;">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image6 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[24px] color-white">{{ section.settings.title6 | default: 'Immersive sound' }}</h3>
            <div class="text-[16px] color-white">{{ section.settings.subtitle6 | default: 'With auto Bass Enhance and our Advanced EQ' }}</div>
          </div>
        </div>

        <!-- Block 7 -->
        <div class="grid-item order-mob-3 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-5 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image7 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[24px] color-white">{{ section.settings.title7 | default: 'Custom diaphragm' }}</h3>
            <div class="text-[16px] color-white">{{ section.settings.subtitle7 | default: 'Less distortion, deeper lows' }}</div>
          </div>
        </div>

        <!-- Block 8 -->
        <div class="grid-item order-mob-4 overflow-hidden position-relative grid-columns-2 grid-rows-1 grid-columns-lg-4 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image8 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-dark">
            <h3 class="text-[24px] text-[#4F805D]">{{ section.settings.title8 | default: 'Ultra compact' }}</h3>
            <div class="text-[16px] text-[#4F805D]">{{ section.settings.subtitle8 | default: 'Just 19 mm thin' }}</div>
          </div>
        </div>

        <!-- Block 9 -->
        <div class="grid-item order-mob-9 overflow-hidden position-relative grid-columns-1 grid-rows-1 grid-columns-lg-3 grid-rows-lg-1">
          <div class="item-image ratio h-100 w-100">
            <img class="w-100 h-100 object-fit-cover" src="{{ section.settings.image9 | img_url: '700x' }}" alt="">
          </div>
          <div class="item-content py-[20px] px-[20px] position-absolute w-100 h-100 top-0 start-0 d-flex flex-column justify-content-end text-white">
            <h3 class="text-[24px] text-white">{{ section.settings.title9 | default: 'IP54' }}</h3>
            <div class="text-[16px] text-white">{{ section.settings.subtitle9 | default: 'Dust & water resistance rated' }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

