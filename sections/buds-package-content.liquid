<script src="https://cdn.tailwindcss.com"></script>
<section class="bg-white py-10">
    <div class="py-8">
        <div class="max-w-[940px] mx-auto rounded-lg">
            <h1 class="text-center text-[32px] font-bold text-gray-800 mb-[40px]">{{ section.settings.heading }}</h1>
            <div class="grid grid-cols-1 md:grid-cols-2">
                {% for item in section.blocks %}
                <div class="flex items-center space-x-4 bg-white p-4 border-b border-gray-300 gap-[10px]">
                    <img src="{{ item.settings.icon | img_url: 'master' }}" alt="{{ item.settings.alt_text }}" class="w-[90px]">
                    <p class="text-[18px] text-gray-700">{{ item.settings.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "What's in the Box",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What's in the Box"
    }
  ],
  "blocks": [
    {
      "type": "box_item",
      "name": "Box Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Icon description"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Description text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "What's in the Box"
    }
  ]
}
{% endschema %}
