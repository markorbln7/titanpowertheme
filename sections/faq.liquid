<section class="faq">
	<div class="product-image__title slider-section__title">General Questions</div>
	{% for block in section.blocks %}
	<div class="accordion">
		<div class="accordion__intro">
			<h4> {{block.settings.q}}</h4>
		</div>
		<div class="accordion__content">
			<p>{{block.settings.a}}</p>
		</div>
	</div>
	{% endfor %}
</section>
{% schema %}
{
  "name": "FAQ",
  "settings": [],
  "blocks": [
    {
      "type": "faq",
      "name": "Add Q",
      "settings": [
        {
          "type": "text",
          "id": "q",
          "info": "Question",
          "label":"Question"
        },
        {
          "type": "text",
          "id": "a",
          "info": "Answer",
          "label":"Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "category": "Home Page"
    }
  ]
}
{% endschema %}