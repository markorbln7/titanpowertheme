{% schema %}
{
  "name": "One Cable For All",
  "tag": "section",
  "class": "section-one-cable",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "One Cable for All"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Note: This cable does not support screen mirroring and offers limited charging speed for the 16-inch MacBook Pro (2021 / 2022)."
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Side Image"
    }
  ],
  "presets": [
    {
      "name": "One Cable For All"
    }
  ]
}
{% endschema %}

<div class="bg-[#f9f9fb] w-full py-[20px] md:py-[40px] px-[20px] md:px-[40px]">
  <div class="max-w-[1440px] mx-auto flex flex-col md:flex-row items-center justify-between gap-[40px]">

    <!-- Text Block -->
    <div class="w-full md:w-[35%] text-center md:text-left">
      <h2 class="text-[28px] md:text-[54px] font-semibold">
        {{ section.settings.title }}
      </h2>
      <p class="text-[16px] text-[#555] leading-[1.5] whitespace-pre-line">
        {{ section.settings.description }}
      </p>
    </div>

    <!-- Image Block -->
    <div class="w-full md:w-[65%]">
      {% if section.settings.right_image %}
        <img
          src="{{ section.settings.right_image | img_url: 'master' }}"
          alt="One cable for all"
          class="w-full h-auto mx-auto rounded-[24px] shadow-[0_0_10px_#b5b5b5]"
        />
      {% endif %}
    </div>

  </div>
</div>
