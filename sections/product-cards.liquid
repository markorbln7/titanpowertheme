<div class="productcard-{{section.id}}" style="margin-bottom: 5%;">
    {%unless section.settings.title == blank %}
    <h1 class="featured-heading">
      {{section.settings.title}}
    </h1>
  {% endunless %}
  <div class="productcard-wrapper">
    {%- for block in section.blocks -%}

      <div class="productcard">
        {% if block.settings.img %}
          <div class="productcardimg">
            {%render 'titan-image'
            image: block.settings.img
            %}
          </div>
          <div class="productcardtexr">
            <a href="{{block.settings.url}}" style="text-decoration: none;">
              {{block.settings.text}}
            </a>
          </div>
        {% endif %}
      </div>

    {% endfor %}
  </div>
</div>


<style>
  .productcard-{{section.id}} {
    background: {{section.settings.background}}; 
  }
  .productcard {
    height: 300px;
    text-align: center;
  }
  .productcard-wrapper {
    max-width: 1200px;
    padding: 50px 0;
    display: flex;
    flex-wrap: wrap;
    margin: auto;
    place-content: center;
    justify-content: space-evenly;
  }
  .productcardimg  .titan-image  {
    width: 250px;
    height: 250px;
  }
  .productcardimg .titan-image img {
    height: 100%;
    width: 100%;
  }
</style>

{% schema %}
{
  "name": "Product Card",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "default": "#FAFAFA",
      "label": "Background Color"
    },{
    "type": "html",
    "id": "title",
    "label": "Heading",
    "default": "Featured collection"
  }
  ],
  "blocks": [
    {
      "type": "Product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "info": "Pick a product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "showprice",
          "label": "Show Price",
          "default": false
        },{
          "type": "url",
          "id": "url",
          "label": "Link"
        },{
          "type": "html",
          "id": "text",
          "label": "Text",
          "info": "Product Title, text ..."
        },
        {
          "type": "image_picker",
          "id": "img",
          "label": "Image"
        }
      ] 
    }
  ],  "presets":[
  {
    "name":"Titan Product Cards"
  }
  ]
}
{% endschema %}