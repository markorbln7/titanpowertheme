      "label": "Video"
    }
  ],
  "blocks": [
    {
      "type": "product_repeater",
      "name": "Products",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Single product"
        },
        {
            "type": "text",
            "id": "timestampe",
            "label": "Time Stamp"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stream"
    }
  ]
}
{% endschema %}