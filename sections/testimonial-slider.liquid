<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css"/>
<div class="swiper mySwiper slider-section">
<div class="product-image__title slider-section__title">Supercharge Your Lifestyle.</div>
    <div class="swiper-wrapper">
     {% for block in section.blocks %}
      <div class="swiper-slide">
         <div class="slide-content">
            <div class="slide-content__image">
              <img src="{{block.settings.image | img_url: 'master'}}">
            </div>
            <div class="slide-content__text">
              <div class="slide-content__text--title">{{block.settings.text}}</div>
              {% if block.settings.name %}<div class="slide-content__text--signature">{{block.settings.name}}</div>{% endif %}
            </div>
         </div>
      </div>
     {% endfor %}
    </div>
    <div class="swiper-pagination"></div>
  </div>
{% schema %}
{
  "name": "Testimonial Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slider Title",
      "default": "Supercharge Your Lifestyle."
    }
  ],
  "blocks": [
    {
        "type": "slider",
        "name": "Testimonial",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
  ],
  "presets": [
    {
      "name": "Testimonial Slider",
      "category": "Home Page"
    }
  ]
}
{% endschema %}
 <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
const swiper = new Swiper('.mySwiper', {
  slidesPerView: 1,
  spaceBetween: 30,
  pagination: {
    el: '.swiper-pagination',
    clickable: true
  },
  breakpoints: {
      768: {
        slidesPerView: 2,
      }
},
})
</script>