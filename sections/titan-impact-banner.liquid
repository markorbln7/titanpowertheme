{% schema %}
{
  "name": "Impact Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Based on 3000+ Reviews"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "2.2+ MLN PRODUCTS SOLD"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body Text",
      "default": "For over a decade, we've delivered millions of products worldwide and won the best awards in technology and design, all made possible by the support of over 800,000 lifehackers like us, fueling our success with crucial feedback and support."
    },
    {
      "type": "image_picker",
      "id": "trustpilot_logo",
      "label": "Trustpilot Stars"
    }
  ],
  "presets": [
    {
      "name": "Impact Banner"
    }
  ]
}
{% endschema %}

<section class="w-full bg-[#e7eced]">
  <div class="max-w-[1440px] mx-auto px-[20px] text-center py-[60px] relative">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | img_url: 'master' }}" class="absolute top-0 left-0 w-full h-full object-cover z-0 opacity-60 pointer-events-none" alt="Cables background">
    {% endif %}

    <div class="relative z-10 max-w-[800px] mx-auto">
      {% if section.settings.trustpilot_logo %}
        <div class="flex justify-center mb-[10px]">
          <img src="{{ section.settings.trustpilot_logo | img_url: '150x' }}" alt="Trustpilot stars" class="h-[20px] object-contain">
        </div>
      {% endif %}
      <p class="text-[14px] text-black opacity-70 mb-[8px]">{{ section.settings.subtitle }}</p>
      <h2 class="text-[24px] md:text-[32px] font-bold uppercase italic text-black mb-[16px]">{{ section.settings.heading }}</h2>
      <p class="text-[16px] text-black opacity-70 italic leading-[1.7]">{{ section.settings.body }}</p>
    </div>
  </div>
</section>
