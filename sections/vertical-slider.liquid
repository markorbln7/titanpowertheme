<style>
{% if section.settings.section_img != blank %}
  .vertical-slider-{{section.id}}{
    background: url('{{ section.settings.section_img | img_url: 'master' }}');
    loading="lazy"  
    background-size: cover;
    box-shadow: 0 19px 32px 10px #000 inset;
    background-position: center;
    height: 60vh;
    padding-top: 4%;
  }
  {% else %}.vertical-slider-{{section.id}}{
    background: {{section.settings.section_bg}};
  }
{% endif %}

.productpack {
  width: 400px; 
  height: 50vh;
  object-fit: contain;
}

 
	.vertical-slider-{{section.id}} 
    .swiper-container-vertical 
    .swiper-button-next,
    .vertical-slider-{{section.id}}
    .swiper-button-prev {
    left: 50%;
	transform-origin: left center;
  	}

    .vertical-slider-{{section.id}}
    .swiper-button-prev {
    top: 10px;
    }

    .vertical-slider-{{section.id}}
    .swiper-button-next {
    top: auto;
    bottom: 10px;
    }
</style>


<div class="vertical-slider-{{section.id}}" style="max-width: 100%;"> 
  <div class="swiper swiperino"  style="max-width: 100%;"> 
    <div class="swiper-wrapper" style="max-width: 100%;"> 
      <!-- Slides -->
      {%for block in section.blocks%}
      <div class="swiper-slide">
        <div class="featured-content" style="max-width: 1600px;">
                <div class="productpack">
                    {% render 'titan-image'
                    image: block.settings.image_packaging
                    %}
                </div>
                <div class="texts">
                  <h1 style=" color:{{ block.settings.text_color }}; word-break:keep-all;">  
                    {{block.settings.text}} 
                  </h1>
                  <p style="color:{{ block.settings.text_color }};">
                      {{block.settings.description}}
                  </p>
                  <div class="scontents-btn titanbutton">
                    <a href="{{ block.settings.button_url}}" style="text-decoration: none;">{{ block.settings.button_text }}</a>
                  </div>
                </div>  
                <div class="productimage">
                    {% render 'titan-image'
                      image: block.settings.image
                    %}   
                  <div class="swiper-button-next"></div> 
                </div>
        </div>
      </div>
        {%endfor%}
    </div>
  </div> 
    
</div> 

 

<script>
     var swiper = new Swiper(".swiperino", {
   

  // Optional parameters
  direction: 'vertical',
  loop: true,
  autoplay: {
   delay: 5000,
 },
    disableOnInteraction: true,

  slidesPerView:1,
        spaceBetween: 200,
   
  
  keyboard: {
    enabled: true,
    onlyInViewport: false,
  },
  lazy: {
    loadPrevNext: true,
  },

  controller: {
    inverse: true,
  },  
  grabCursor: true,
 

  
  // If we need pagination


  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },
  // And if we need scrollbar
  scrollbar: {
    el: '.swiper-scrollbar',
  },
});
</script>



