{% schema %}

{
  "name": "Vertical Product Scroll",
  "class": "section",
  "settings": [
    {
      "type": "color_background",
      "id": "section_bg",
      "label": "Secrion Background",
      "default": "#000000",
      "info": "Background backup - if block background isn't set"
    }, {
      "type": "image_picker",
      "id": "section_img",
      "label": "Section Background Image"
    }, {
      "type": "header",
      "content": "Navigation"
    }, {
      "type": "color",
      "id": "arrow_color",
      "label": "Arrow Color",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "pagination_color",
      "label": "Vertical Pagination Color",
      "default": "#000000",
      "info": "This setting changes the active dot color"
    }, {
      "type": "color",
      "id": "button_bg_hover",
      "label": "Button Hover Background",
      "default": "#000000"
    }, {
      "type": "color_background",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    }, {
      "type": "color",
      "id": "button_border",
      "label": "Button Border Color",
      "default": "#FFFFFF"
    }, {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "Product",
      "name": "Product Picker",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Heading"
        }, {
          "type": "html",
          "id": "description",
          "label": "Description",
          "default": "Description <br> Of <br> Product"
        }, {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Button Text"
        }, {
          "type": "url",
          "id": "button_url",
          "label": "Button Link"
        }, {
          "type": "color",
          "id": "text_color",
          "default": "#FFFFFF",
          "label": "Heading Color"
        }, {
          "type": "product",
          "id": "product",
          "label": "Product"
        }, {
          "type": "image_picker",
          "id": "image",
          "label": "Product Image"
        }, {
          "type": "image_picker",
          "id": "image_packaging",
          "label": "Product Packaging Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vertical Slider",
      "blocks": []
    }
  ]
}

{% endschema %}
