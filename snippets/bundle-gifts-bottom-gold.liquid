<div class="bundle-gifts-wrapper bundle-bottom-gifts gold">
    <div class="bundle-gifts relative">
        <div class="white-line"><img class="w-100" src="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/new_line_design.png?v=1701417429"></div>
        <div class="bundle-gifts__single">
            <div class="bundle-gifts__single--image">
                <img src="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/4_x_free_gift_banner_-_mobile_V2-cable_-_small_3a8e8eba-8d38-4b4b-8712-3637cded9e7f.png?v=1701416899">
            </div>
            <div data-image="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/titan_cable_icon_19047dde-e641-4e84-8e65-3685cf41db36.png?v=1702556590" data-gift="{{all_products['pd'].price }}" class="bundle-gifts__single--text js-first-gift">
                <p>SPEND: <span>{{all_products['pd'].price | money_without_trailing_zeros }}</span> </p>
            </div>
        </div>
        <div class="bundle-gifts__single">
            <div class="bundle-gifts__single--image">
                <img src="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/4_x_free_gift_banner_-_mobile_V2-small-3in1_cable.png?v=1701416899">
            </div>
            <div data-image="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/3_in_1_cable_icon_105861a6-53fe-4485-a59e-4ea02989852a.png?v=1702556590" data-gift="{{all_products['3-in-1-price-holder-do-not-delete'].price }}" class="bundle-gifts__single--text js-second-gift">
                <p>SPEND: <span>{{all_products['3-in-1-price-holder-do-not-delete'].price | money_without_trailing_zeros }}</span> </p>
            </div>
        </div>
        <div class="bundle-gifts__single">
            <div class="bundle-gifts__single--image">
                <img src="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/3_x_free_gift_banner_-_mobile_V2-case_-_small_60e465fe-6c7a-4989-bc45-c04eddf5d3ed.png?v=1709565485">
            </div>
            <div data-image="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/Free_case_gift_product_Icons.png?v=1709575837" data-gift="{{all_products['turbo-dock-price-holder-do-not-delete'].price }}" class="bundle-gifts__single--text js-third-gift">
                <p>SPEND: <span>{{all_products['turbo-dock-price-holder-do-not-delete'].price | money_without_trailing_zeros }}</span>  </p>
            </div>
        </div>
        {% comment %} <div class="bundle-gifts__single">
            <div class="bundle-gifts__single--image">
                <img src="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/4_x_free_gift_banner_-_mobile_V2-_buds.png?v=1702646556">
            </div>
            <div data-image="https://cdn.shopify.com/s/files/1/0071/1727/5191/files/titan_buds_icon_329fa683-a6db-454e-a2b8-fe7c82acd8c6.png?v=1702556590" data-gift="{{all_products['tb'].price }}" class="bundle-gifts__single--text js-fourth-gift">
                <p>SPEND: <span>{{all_products['tb'].price | money_without_trailing_zeros }}</span> </p>
            </div>
        </div> {% endcomment %}
    </div>
</div>

<style>
    .white-line {
        width: 75%;
        height: 5px;
        display: block!important;
        position: absolute;
        top: 33%!important;
        left: 10%;
        background-color: transparent !important;
    }
    .bundle-bottom-gifts.gold .white-line {
        width: 75%;
        height: 5px;
        display: block!important;
        position: absolute;
        top: 36%!important;
        left: 10%;
        background-color: transparent !important;
    }
    @media screen and (max-width: 350px) {
        .bundle-bottom-gifts.gold .white-line {
            top: 26%!important;
        }
    }
    .bundle-gifts-wrapper.bundle-bottom-gifts {
        background-color: #000;
        padding: 0;
        margin-top: -50px;
    }
    .rebuy-modal-visible {
        overflow: scroll !important;
    }
    #rebuy-cart {
        display: none;
    }
</style>
<script>
    $(".header__icon").click(function(){
        $("#rebuy-cart").css("display", "block")
      });
</script>
